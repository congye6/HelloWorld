<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1">

    <View  android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="@color/bootstrap_brand_secondary_border"
        android:id="@+id/view"
        android:layout_below="@+id/avatar"
/>

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapBrand="primary"
        app:bootstrapText="张全蛋(141250204)"
        android:id="@+id/name"
        android:textSize="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_toEndOf="@+id/avatar" />

    <android.support.v4.widget.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/avatar"
        android:background="@drawable/profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapText="邮箱:244053679@qq.com"
        app:bootstrapBrand="primary"
        android:id="@+id/email"
        android:textSize="15dp"

        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:bootstrapBrand="danger"
        app:bootstrapText="{fa_female}"
        android:id="@+id/gender"

        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name" />

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bootstrapText="git:2234454534.git@effkkllkk"
        app:bootstrapBrand="primary"
        android:id="@+id/git"
        android:textSize="15dp"
        android:layout_marginTop="-2dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />


</RelativeLayout>