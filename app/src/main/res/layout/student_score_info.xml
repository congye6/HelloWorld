<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bootstrap_brand_info">

    <TextView
        android:id="@+id/title"
        android:text="问题一dfjfj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:id="@+id/score"
        android:text="得分:90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/git"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/git"
        android:text="git:2384394854985948594859458585858"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
         />

    <TextView
        android:id="@+id/analysis"
        android:text="总行数:90  注释行数:25  方法数:23\n属性数:12  max_coc:12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/git"
        android:layout_alignLeft="@+id/git"
        android:layout_alignStart="@+id/git" />


        <TextView
            android:id="@+id/testcase"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/analysis"
            android:layout_alignLeft="@+id/analysis"
            android:layout_alignStart="@+id/analysis"/>


    <TextView
        android:id="@+id/readme"
        android:text="readme:djfhkdfjkdjfkdfjkdfjkfjfkdfjj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testcase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bootstrap_brand_secondary_fill"
        android:id="@+id/blank"
        android:layout_below="@+id/readme"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>